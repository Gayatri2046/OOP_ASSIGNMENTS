#include<iostream>
#include<string>
using namespace std;

class bank_account {
private:
    string name;
    string account_type;
    int account_number;
    float balance;
public:
    // Constructor definition - Removed semicolon after header
    bank_account(string n, string at, int an, float b) {
        name = n;
        account_type = at;
        account_number = an;
        balance = b;
    }

    void deposit(double amount);
    void withdraw(double rupees);
    void display();
};

// Member function definitions
void bank_account::deposit(double amount) {
    balance += amount;
    cout << "\n₹" << amount << " deposited successfully.\n";
}

void bank_account::withdraw(double rupees) {
    if (rupees <= balance) {
        balance -= rupees;
        cout << "\n₹" << rupees << " withdrawn successfully.\n";
    } else {
        cout << "\nInsufficient Balance!\n";
    }
}

void bank_account::display() {
    cout << "\n--- Account Details ---\n";
    cout << "Name of the customer: " << name << endl;
    cout << "Account type: " << account_type << endl;
    cout << "Account number: " << account_number << endl;
    cout << "Available balance: ₹" << balance << endl;
}

int main() {
    int choice;
    float amount, b;
    char ch;
    int an;
    string n, at;

    cout << "Enter name: ";
    getline(cin, n);  // getline is fine here directly

    cout << "Enter account type: ";
    cin >> at;

    cout << "Enter account number: ";
    cin >> an;

    cout << "Enter balance: ";
    cin >> b;

    bank_account obj1(n, at, an, b);  // Create object

    do {
        cout << "\n----- Bank Account Menu -----\n";
        cout << "1. Display account details\n";
        cout << "2. Deposit amount\n";
        cout << "3. Withdraw amount\n";
        cout << "4. Exit\n";
        cout << "Enter your choice: ";
        cin >> choice;

        switch (choice) {
        case 1:
            obj1.display();
            break;
        case 2:
            cout << "Enter amount to deposit: ";
            cin >> amount;
            obj1.deposit(amount);
            break;
        case 3:
            cout << "Enter amount to withdraw: ";
            cin >> amount;
            obj1.withdraw(amount);
            break;
        case 4:
            cout << "Exiting...\n";
            break;
        default:
            cout << "Invalid choice. Try again.\n";
        }

        if (choice != 4) {
            cout << "\nDo you want to continue? (y/n): ";
            cin >> ch;
        } else {
            ch = 'n';
        }

    } while (ch == 'y' || ch == 'Y');

    return 0;
}
