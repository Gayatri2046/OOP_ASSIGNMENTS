#include<iostream>
#include<vector>
using namespace std;
class staff {
protected:
   string name, dept;
   int staff_id;
public:
   void accept() {
       cout << "\nEnter name: ";
       cin >> name;
       cout << "Enter department: ";
       cin >> dept;
       cout << "Enter staff_id: ";
       cin >> staff_id;
   }
   void display() {
       cout << "\nName: " << name;
       cout << "\nDepartment: " << dept;
       cout << "\nStaff_id: " << staff_id;
   }
};
class teacher : public staff {
   string sub;
   string exp;
public:
   void accept1() {
       staff::accept();
       cout << "Enter subject: ";
       cin >> sub;
       cout << "Enter experience (in years): ";
       cin >> exp;
   }
   void display1() {
       staff::display();
       cout << "\nSubject: " << sub;
       cout << "\nExperience: " << exp;
   }
};
class administrator : public staff {
   string experience;
   string salary;
public:
   void accept2() {
       staff::accept();
       cout << "Enter experience: ";
       cin >> experience;
       cout << "Enter salary: ";
       cin >> salary;
   }
   void display2() {
       staff::display();
       cout << "\nExperience: " << experience;
       cout << "\nSalary: " << salary;
   }
};
class supportstaff : public staff {
   string role;
   string shift;
public:
   void accept3() {
       staff::accept();
       cout << "Enter role: ";
       cin >> role;
       cout << "Enter shift (morning/evening): ";
       cin >> shift;
   }
   void display3() {
       staff::display();
       cout << "\nRole: " << role;
       cout << "\nShift: " << shift;
   }
};
int main() {
   int n, m, x;
   // Teacher input
   cout << "\nEnter no. of teachers: ";
   cin >> n;
   vector<teacher> t1(n);
   for (int i = 0; i < n; i++) {
       cout << "\nEnter details for teacher " << i + 1 << ":\n";
       t1[i].accept1();
   }
   // Administrator input
   cout << "\nEnter no. of administrators: ";
   cin >> m;
   vector<administrator> a1(m);
   for (int i = 0; i < m; i++) {
       cout << "\nEnter details for administrator " << i + 1 << ":\n";
       a1[i].accept2();
   }
   // Support staff input
   cout << "\nEnter no. of supportstaff: ";
   cin >> x;
   vector<supportstaff> s1(x);
   for (int i = 0; i < x; i++) {
       cout << "\nEnter details for supportstaff " << i + 1 << ":\n";
       s1[i].accept3();
   }
   cout << "\n\n========== OUTPUT ==========\n";
   cout << "\n--- Teacher Details ---";
   for (int i = 0; i < n; i++) {
       cout << "\nTeacher " << i + 1 << ":";
       t1[i].display1();
       cout << "\n";
   }
   cout << "\n--- Administrator Details ---";
   for (int i = 0; i < m; i++) {
       cout << "\nAdministrator " << i + 1 << ":";
       a1[i].display2();
       cout << "\n";
   }
   cout << "\n--- Supportstaff Details ---";
   for (int i = 0; i < x; i++) {
       cout << "\nSupportstaff " << i + 1 << ":";
       s1[i].display3();
       cout << "\n";
   }
   return 0;
}
